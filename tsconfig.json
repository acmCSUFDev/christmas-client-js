{
  "include": ["src/**/*"],
  "exclude": [],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
